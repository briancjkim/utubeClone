extends layouts/main

block content
  .form-container
    form(action=routes.join, method="post")
      input(type="text", name="name", placeholder="Full Name",isRequired=true)
      input(type="email", name="email", placeholder="Email",isRequired=true)
      input(type="password", name="password", placeholder="Password",isRequired=true)
      input(type="password", name="password2", placeholder="Verify Password",isRequired=true)
      input(type="submit",value="Join Now")
    include partials/socialLogin